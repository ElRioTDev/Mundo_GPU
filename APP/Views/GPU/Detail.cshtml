@model APP.Models.Gpu

<div class="container mt-5">
    <div class="row">
        <!-- Imagen -->
        <div class="col-md-6 text-center mb-4">
            <img src="@Model.Imagen" class="img-fluid rounded shadow" alt="@Model.Modelo" style="max-height:350px; object-fit:cover;" />
        </div>

        <!-- Detalles -->
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Modelo</h2>
            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Marca:</strong> @Model.Marca</li>
                <li class="list-group-item"><strong>VRAM:</strong> @Model.VRAM</li>
                <li class="list-group-item"><strong>Núcleos CUDA:</strong> @Model.NucleosCuda</li>
                <li class="list-group-item"><strong>Ray Tracing:</strong> @(Model.RayTracing ? "Sí" : "No")</li>
                <li class="list-group-item"><strong>Precio:</strong> @Model.Precio.ToString("C")</li>
            </ul>

            <a href="@Url.Action("Index", "Gpu")" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>
</div>

<style>
    h2 {
        font-weight: bold;
    }

    .list-group-item {
        font-size: 1rem;
    }

    .btn-secondary {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
    }
</style>
