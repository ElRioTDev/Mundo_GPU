@model List<APP.Models.Usuario>

<div class="container mt-4">
    <h2>Usuarios</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Nuevo Usuario</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Username</td>
                    <td>@u.Nombre</td>
                    <td>@u.Apellido</td>
                    <td>@u.Rol</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@u.Id" class="btn btn-info btn-sm">Ver</a>
                        <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
