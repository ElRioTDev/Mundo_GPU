@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="register-container">
    <h2>Registrarse</h2>

    @* Mostrar errores usando TempData *@
    @if (TempData["Error"] != null)
    {
        <div class="error-message">@TempData["Error"]</div>
    }

    <form method="post" asp-controller="Registro" asp-action="ComprobarRegistro">
        <div class="input-group">
            <label for="usuario">Nombre de Usuario</label>
            <input type="text" id="usuario" name="usuario" required />
        </div>

        <div class="input-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" required />
        </div>

        <div class="input-group">
            <label for="confirmarPassword">Confirmar Contraseña</label>
            <input type="password" id="confirmarPassword" name="confirmarPassword" required />
        </div>

        <div class="botones">
            <button type="submit">Registrarse</button>
            <a asp-controller="Login" asp-action="Index" class="cancel-button">Cancelar</a>
        </div>
    </form>
</div>

<style>
    .register-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        text-align: center;
        font-family: Arial, sans-serif;
    }

    .input-group {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        font-size: 14px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    .botones {
        text-align: center;
        margin-top: 20px;
    }

    .botones button,
    .botones .cancel-button {
        padding: 10px 20px;
        font-size: 14px;
        cursor: pointer;
        margin-right: 10px;
        text-decoration: none;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 3px;
        display: inline-block;
    }

    .botones .cancel-button {
        background-color: #6c757d;
    }

    .error-message {
        color: red;
        margin-bottom: 15px;
        font-weight: bold;
    }
</style>
